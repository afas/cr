<div id="inner-content" class="li-no-style">
  <h2>Мой профиль</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.label :email %>
        <br/>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label "Имя" %>
        <br/>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label "Фамилия" %>
        <br/>
        <%= f.text_field :surname %>
      </div>
      <div>
        <%= f.label "Телефон" %>
        <br/>
        <%= f.text_field :phone %>
      </div>
      <div>
        <%= f.label "Расскажите о себе" %>
        <br/>
        <%= f.text_area :about, :cols => 55, :rows => 5 %>
      </div>
      <div>
        <%= f.label "Роль в системе" %>
        <br/>
        <%= f.collection_select(:role_id, Role.collection(current_user.admin? || current_user.id == 1), :cut, :name, :prompt => true) %>
      </div>
      <div>
        <%= f.label "Организация" %>
        <br/>
        <%= f.text_field :organization %>
      </div>
      <!--<div>-->
      <!--<%#= f.label "Внутренний работник" %>-->
      <!--<br/>-->
      <!--<%#= f.check_box :internal %>-->
      <!--</div>-->

      <div>
        <%= f.label :password %> <i>(не нужно заполнять если вы не хотите внести изменения в профиль)</i><br/>
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <br/>
        <%= f.password_field :password_confirmation %>
      </div>

      <div>
        <%= f.label :current_password %> <i>(введите для сохранения профиля)</i><br/>
        <%= f.password_field :current_password %>
      </div>

      <br/>
      <div>
        <% if current_user.admin? || current_user.id == 1 %>
            <%= link_to 'Управление пользователями', "/user" %>
        <% end %>
      </div>
      <br/>
      <br/>

      <div>
        <%= f.submit "Сохранить изменения" %>
      </div>
  <% end %>
</div>