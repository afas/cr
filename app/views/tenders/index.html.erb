<div id="inner-content" class="li-no-style">
  <%= title("Входящие заявки") %>

  <table width="100%">
    <tr>
      <th><%= "Имя" %></th>
      <th><%= "Телефон" %></th>
      <th><%= "Тип" %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @tenders.each do |tender| %>
    <tr>
      <td><%= tender.name %></td>
      <td><%= tender.phone %></td>
      <td><%= TenderOperation.by_id(tender.operation) %></td>
      <td><%= link_to(t('backend.actions.show'), tender) if can?(:show, tender) %></td>
      <td><%= link_to(t('backend.actions.edit'), edit_tender_path(tender))  if can?(:edit, tender) %></td>
      <td><%= link_to(t('backend.actions.destroy'), tender, :confirm => t('backend.actions.are_you_sure'), :method => :delete) if can?(:destroy, tender) %></td>
    </tr>
  <% end %>
  </table>

  <p><%= link_to("Создать заявку", new_tender_path) if can?(:create, Tender) %></p>
</div>