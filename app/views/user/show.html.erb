<div id="inner-content" class="li-no-style">
  <div>
    <%= f.label :email %>
    <br/>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label "Имя" %>
    <br/>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label "Фамилия" %>
    <br/>
    <%= f.text_field :surname %>
  </div>
  <div>
    <%= f.label "Телефон" %>
    <br/>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label "О себе" %>
    <br/>
    <%= f.text_area :about, :cols => 55, :rows => 5 %>
  </div>
  <div>
    <%= f.label "Роль в системе" %>
    <br/>
    <%= f.collection_select(:role_id, Role.collection(current_user.admin? || current_user.id == 1), :cut, :name, :prompt => true) %>
  </div>
  <div>
    <%= f.label "Организация" %>
    <br/>
    <%= f.text_field :organization %>
  </div>
</div>
